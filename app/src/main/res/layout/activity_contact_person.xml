<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contact_person_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="#fff"
        app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/contact_person_toolbar_profileheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/LightOrange"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="14dp" tools:layout_editor_absoluteX="179dp"
            android:text="Contato"
            android:textSize="@dimen/_15ssp"/>


    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/scrollView3" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_person_toolbar" android:layout_marginTop="8dp"
        android:layout_marginBottom="300dp" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Nome do perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/contact_person_profile_name"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textSize="@dimen/_14ssp" android:textStyle="bold"/>
            <TextView
                android:text="estou interessado em"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_person_what_are_you_looking_for_text_title" android:editable="false"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                android:layout_marginTop="16dp"/>
            <CheckBox
                android:text="Sair com os amigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_person_register_travel_checkbox" android:layout_marginTop="8dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="24dp"
                android:textSize="@dimen/_14ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                android:checked="false"/>
            <CheckBox
                android:text="para encontrar pessoas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_person_register_meet_checkbox" android:layout_marginTop="8dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="24dp"
                android:textSize="@dimen/_14ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                />
            <CheckBox
                android:text="to date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_person_register_date_checkbox" android:layout_marginTop="8dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="24dp"
                android:textSize="@dimen/_14ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                />
            <TextView
                android:text="Minhas datas de viagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView20"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" android:layout_marginTop="16dp"
                android:textSize="@dimen/_14ssp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="A partir de::"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    android:layout_marginEnd="24dp" android:layout_marginStart="24dp" android:layout_marginTop="8dp"
                    android:textSize="@dimen/_14ssp"/>
                <TextView
                    android:text="escolha data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/contact_person_pick_from"
                    android:layout_toEndOf="@+id/textView21" android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp" android:textSize="@dimen/_14ssp"
                    android:textColor="@color/CommonBlue"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Para:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView22" android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp" android:textSize="@dimen/_14ssp"/>
                <TextView
                    android:text="escolha data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/contact_person_pick_to"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="8dp" android:textSize="@dimen/_14ssp"
                    android:textColor="@color/CommonBlue" android:layout_toEndOf="@+id/textView22"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:text="mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView25"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:textSize="@dimen/_14ssp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/contact_person_edittext"
            android:background="@drawable/border_textview"
            android:textColor="@color/CommonBlue"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="43dp"
            android:textColorHint="@color/CommonBlue" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView25" android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" android:singleLine="false" android:textAlignment="textStart"
            android:gravity="top" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"/>
        <Button
            android:text="Pronto"

            android:gravity="center_vertical|center_horizontal"
            android:layout_width="70dp"
            android:background="@drawable/round_button"
            android:layout_height="70dp" android:id="@+id/contact_person_go_button" android:layout_weight="1"
            android:textColor="@android:color/white" android:textSize="@dimen/_12ssp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
