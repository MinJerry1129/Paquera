<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage.EventsEditActivity"
    android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/profile_events_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:minHeight="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      app:titleTextColor="#fff"
      app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:contentInsetLeft="0dp"
      app:contentInsetStart="0dp"
      tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/LightOrange"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_gravity="center"
        android:text="Meus Eventos"
        android:textSize="@dimen/_15ssp"/>
  </androidx.appcompat.widget.Toolbar>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@color/colorPrimary"
      android:id="@+id/event_edit_toolbar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/profile_events_toolbar"
      app:layout_constraintVertical_bias="0.0">
    <Button
        android:id="@+id/toolbar_events_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pré-visualização"
        android:textColor="@color/CommonBlue"
        android:layout_gravity="right"
        android:paddingRight="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_12ssp"/>
    <Button
        android:id="@+id/toolbar_events_save_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar no rascunho"
        android:textColor="@color/CommonBlue"
        android:layout_gravity="right"

        android:paddingRight="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_12ssp"/>
    <Button
        android:id="@+id/toolbar_events_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:textColor="@color/CommonBlue"
        android:layout_gravity="right"

        android:paddingRight="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_12ssp"/>
  </LinearLayout>
  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/event_edit_toolbar"
      app:layout_constraintVertical_bias="0.0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:paddingBottom="6dp"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Data e hora do evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <TextView
            android:text=" e.g. Friday 26 July 2019, 21.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/CommonBlue"/>
      </LinearLayout>
      <TextView
          android:id="@+id/events_edit_datetime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:textColor="@color/quantum_black_100"
          android:background="@drawable/border_left_textview"
          android:hint="Selecionar data e hora do evento"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:paddingBottom="6dp"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Título do evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <TextView
            android:text=" e.g Speed Meeting ‘mix-up’ Social Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/CommonBlue"/>
      </LinearLayout>
      <EditText
          android:id="@+id/events_edit_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:inputType="text"
          android:background="@drawable/border_left_textview"
          android:hint="Escreva o título do evento"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:paddingBottom="6dp"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Organizados por"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <TextView
            android:text=" e.g. BlackCharm Social Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/CommonBlue"/>
      </LinearLayout>
      <EditText
          android:id="@+id/events_edit_organise"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/border_left_textview"
          android:hint="Escreva o nome do grupo ou organização"
          android:maxLines="1"
          android:inputType="text"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:paddingBottom="6dp"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Localização"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <TextView
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/CommonBlue"/>
      </LinearLayout>

      <TextView
          android:id="@+id/events_edit_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/border_left_textview"
          android:hint="Escreva o nome e o endereço do local"
          android:maxLines="1"
          android:inputType="text"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:paddingBottom="6dp" android:visibility="gone"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <TextView
            android:text=" e.g. from 21.00 to 01.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/CommonBlue"/>
      </LinearLayout>
      <EditText
          android:id="@+id/events_edit_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:inputType="text"
          android:background="@drawable/border_left_textview"
          android:hint="Write event time"
          android:visibility="gone"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <TextView
          android:text="Como nos encontrar?"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginTop="10dp"
          android:textSize="@dimen/_12ssp"
          android:paddingBottom="6dp"
          android:textColor="@color/commonGrey"/>
      <EditText
          android:id="@+id/events_edit_howtofindus"
          android:layout_width="match_parent"
          android:maxLines="1"
          android:inputType="text"
          android:layout_height="wrap_content"
          android:background="@drawable/border_left_textview"
          android:hint="como seus convidados podem encontrar você?"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <TextView
          android:text="Seus links"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginTop="10dp"
          android:textSize="@dimen/_12ssp"
          android:paddingBottom="6dp"
          android:textColor="@color/commonGrey"/>
      <EditText
          android:id="@+id/events_edit_link1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:inputType="text"
          android:background="@drawable/border_left_textview"
          android:hint="e.g Facebook page"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>
      <EditText
          android:layout_marginTop="5dp"
          android:id="@+id/events_edit_link2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:inputType="text"
          android:background="@drawable/border_left_textview"
          android:hint="e.g https://www.myfriendsroom.com/discoveries"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>

      <TextView
          android:text="Mais informações"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginTop="10dp"
          android:textSize="@dimen/_12ssp"
          android:paddingBottom="6dp"
          android:textColor="@color/commonGrey"/>
      <EditText
          android:id="@+id/events_edit_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/border_left_textview"
          android:hint="Escreva a descrição de seus eventos"
          android:visibility="visible"
          android:paddingLeft="10dp"
          android:inputType="textMultiLine"
          android:gravity="top|left"
          android:scrollbars="vertical"
          android:textColorHint="@color/LightOrange"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:textSize="@dimen/_12ssp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp" android:orientation="horizontal">
        <TextView
            android:text="Imagem do Evento"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a imagem"
            android:id="@+id/addeventsImages"
            android:textColor="@color/CommonBlue"
            style="@style/Widget.AppTheme.MyCustomButton"
            android:paddingRight="16dp" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_14ssp">

        </Button>
      </LinearLayout>

      <ImageView
          android:id="@+id/events_edit_image_box"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="20dp"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp">

      </ImageView>

      <Button
          android:id="@+id/events_remove_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Excluir"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:textAllCaps="false"
          android:textColor="@color/CommonBlue"
          android:textSize="@dimen/_15ssp"
          android:layout_gravity="center"
          />

    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>