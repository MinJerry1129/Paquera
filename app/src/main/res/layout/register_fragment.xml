<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerlogin.RegisterLoginActivityMain" app:barrierAllowsGoneWidgets="false">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <TextView
                android:text="Nome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_name_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="0dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="0dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/name_edittext_register"
                android:background="@drawable/border_left_textview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Qual o seu nome?"
                android:visibility="visible" android:layout_height="match_parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:paddingLeft="10dp"
                android:textColorHint="@color/CommonBlue" android:inputType="textPersonName"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/register_name_text" android:textColor="@color/CommonBlue"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:text="Idade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_age_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="0dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="0dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/username_edittext_register"/>
            <EditText
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/age_edittext_register"
                android:background="@drawable/border_left_textview"
                android:hint="Quantos anos você tem?"
                app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="10dp"
                android:textColor="@color/CommonBlue"
                android:textColorHint="@color/CommonBlue"
                app:layout_constraintTop_toBottomOf="@+id/register_age_text"
                android:visibility="visible"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_width="match_parent"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:text="Local de residência"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_home_travel_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/age_edittext_register"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/hometravel_edittext_register"
                android:background="@drawable/border_left_textview"
                android:hint="Digite sua Cidade"
                app:layout_constraintTop_toBottomOf="@+id/register_home_travel_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="10dp"
                android:textColor="@color/CommonBlue"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColorHint="@color/CommonBlue" app:layout_constraintHorizontal_bias="0.0"
                android:textSize="@dimen/_13ssp"
                android:inputType="none"
                android:focusable="false"
                />
            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_email_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/hometravel_edittext_register"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_edittext_register"
                android:background="@drawable/border_left_textview"
                android:hint="Digite seu e-mail..."
                app:layout_constraintTop_toBottomOf="@+id/register_email_text"
                app:layout_constraintStart_toStartOf="@+id/hometravel_edittext_register"
                app:layout_constraintEnd_toEndOf="@+id/hometravel_edittext_register"
                app:layout_constraintHorizontal_bias="0.0" android:visibility="visible" android:paddingLeft="10dp"
                android:textColor="@color/CommonBlue"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColorHint="@color/CommonBlue"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:text="Senha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_password_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/email_edittext_register"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_edittext_register"
                android:background="@drawable/border_left_textview"
                android:hint="Coloque sua senha...."
                app:layout_constraintStart_toStartOf="@+id/email_edittext_register"
                app:layout_constraintEnd_toEndOf="@+id/email_edittext_register" android:paddingLeft="10dp"
                android:textColor="@color/CommonBlue"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColorHint="@color/CommonBlue" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/register_password_text"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:text="Repita a senha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_repeatpassword_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/password_edittext_register"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_repeat_edittext_register2"
                android:background="@drawable/border_left_textview"
                android:hint="Repita a senha..."
                app:layout_constraintTop_toBottomOf="@+id/register_repeatpassword_text"
                app:layout_constraintStart_toStartOf="@+id/register_repeatpassword_text"
                app:layout_constraintEnd_toEndOf="@+id/register_repeatpassword_text" android:paddingLeft="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/CommonBlue"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColorHint="@color/CommonBlue"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:text="Gênero:"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_gender_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/password_repeat_edittext_register2"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/notificationLinear"


                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
                <CheckBox
                    android:text="Mulher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_female_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:theme="@style/OrangeCheckBoxProfile"
                    android:textColor="@color/CommonBlue"
                    android:paddingLeft="5dp"
                    android:checked="false" android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"/>
                <CheckBox
                    android:text="Homem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_male_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:theme="@style/OrangeCheckBoxProfile"
                    android:textColor="@color/CommonBlue"
                    android:paddingLeft="5dp"
                    android:checked="false"
                    android:layout_marginStart="70dp"
                    android:layout_toEndOf="@+id/register_female_checkbox"/>

            </RelativeLayout>
            <TextView
                android:text="Adicione sua foto do perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_upload_avatar_text" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/register_gender_text"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/emptyavatar"
                android:id="@+id/selectphoto_button_register"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                tools:layout_editor_absoluteX="140dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/register_upload_avatar_text"/>

            <TextView
                android:text="Como você soube desse aplicativo?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/register_aboutus_text" android:textSize="@dimen/_14ssp"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <Spinner android:id="@+id/about_this_app_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/about_arrays"
                android:prompt="@string/about_prompt"
                android:spinnerMode="dropdown" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">

            </Spinner>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/from_person">
                <EditText
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:id="@+id/from_person_code"
                    android:background="@drawable/border_left_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="código"
                    android:visibility="visible" android:layout_height="match_parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/CommonBlue" android:inputType="textPersonName"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_name_text"
                    android:textColor="@color/CommonBlue"
                    android:textSize="@dimen/_14ssp" android:layout_marginBottom="12dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:id="@+id/from_person_name"
                    android:background="@drawable/border_left_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="nome"
                    android:visibility="visible" android:layout_height="match_parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/CommonBlue" android:inputType="textPersonName"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_name_text"
                    android:textColor="@color/CommonBlue"
                    android:textSize="@dimen/_14ssp" android:layout_marginBottom="12dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:id="@+id/from_person_company"
                    android:background="@drawable/border_left_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="companhia"
                    android:visibility="visible" android:layout_height="match_parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/CommonBlue" android:inputType="textPersonName"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_name_text"
                    android:textColor="@color/CommonBlue"
                    android:textSize="@dimen/_14ssp"/>
            </LinearLayout>
            <Button
                android:text="Próximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/next_button_register" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
                app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
                app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"
                style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
                android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
                android:textSize="@dimen/_13ssp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
                android:layout_marginBottom="100dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>