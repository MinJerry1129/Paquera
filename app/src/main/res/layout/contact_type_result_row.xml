<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/contact_type_imageview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            tools:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_type_name"
            app:layout_constraintStart_toEndOf="@+id/contact_type_imageview"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/commonGrey" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/contact_type_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/contact_type_imageview"/>

</androidx.constraintlayout.widget.ConstraintLayout>