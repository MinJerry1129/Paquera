<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerlogin.TermsScreen">

    <TextView
            android:text="v0.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/version_txt" android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginBottom="6dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp"/>
    <TextView
            android:text="Cadastre-se ou entre com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/commonGrey" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.facebook.login.widget.LoginButton
            android:text="Facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/terms_facebook_button1"
            android:background="@drawable/rounded_corner_facebook"
            android:textColor="@android:color/white"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="false" android:visibility="gone"/>

    <Button
            android:text="Facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/terms_facebook_button"
            android:background="@drawable/rounded_corner_facebook"
            android:onClick = "onClickFacebookButton"
            android:textColor="@android:color/white"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="false" android:visibility="visible"/>


    <Button
            android:text="Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/terms_email_button"
            android:background="@drawable/rounded_corner_email"
            android:textColor="@android:color/white" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/terms_facebook_button" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="false"/>
    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_age_checkbox" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/terms_email_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"

            android:theme="@style/OrangeCheckBox"
    />
    <TextView
            android:text="@string/confirm_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/confirm_age_checkbox" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/confirm_age_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/confirm_age_checkbox"
            android:textSize="@dimen/_13ssp" android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/terms_checkbox" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_age_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:theme="@style/OrangeCheckBox"
            android:gravity="top"
    />
    <TextView
        android:text="@string/confirm_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_terms_confirm"
        app:layout_constraintStart_toEndOf="@+id/terms_checkbox"
        android:layout_marginStart="8dp"
        android:textColorLink="@color/CommonBlue"
        android:textColorHighlight="@android:color/transparent"
        android:textSize="@dimen/_13ssp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toTopOf="@+id/terms_checkbox"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>