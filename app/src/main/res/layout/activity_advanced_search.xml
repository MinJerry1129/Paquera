<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        tools:context=".bottom_nav_pages.AdvancedSearch"
android:id = "@+id/advanced_search">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/advanced_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="#fff"
        app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbar_searchheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/LightOrange"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="14dp" tools:layout_editor_absoluteX="179dp"
            android:text="Procurar"
            android:textSize="@dimen/_15ssp"/>

        <Button
            android:id="@+id/toolbar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textColor="@color/CommonBlue"
            android:layout_gravity="right"

            android:paddingRight="16dp" tools:layout_editor_absoluteY="14dp" tools:layout_editor_absoluteX="329dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_15ssp"/>


    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:text="SELECIONE SOMENTE UMA OPÇÃO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/one_option_text"
        app:layout_constraintTop_toBottomOf="@+id/advanced_search_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="15sp"
        android:textAllCaps="true" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/one_option_text"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:paddingLeft="0dp"
            android:paddingRight="0dp" android:orientation="vertical">
            <TextView
                android:text="Por nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchname"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="6dp"
                android:textSize="@dimen/_12ssp" android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/search_name_text"
                android:background="@drawable/border_none_textview"
                android:layout_marginEnd="24dp"
                android:hint="nome"
                android:visibility="visible" android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="84dp"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:text="Por idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchage"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:textSize="@dimen/_12ssp"/>

            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/search_age_from_text"
                android:background="@drawable/border_none_textview"
                android:layout_marginEnd="24dp"
                android:hint="From"
                android:visibility="visible" android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="84dp"
                android:textSize="@dimen/_12ssp" android:inputType="number" android:text="18"/>

            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/search_age_to_text"
                android:background="@drawable/border_none_textview"
                android:layout_marginEnd="24dp"
                android:hint="To"
                android:visibility="visible" android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="84dp"
                android:textSize="@dimen/_12ssp" android:inputType="number" android:text="100"/>

            <TextView
                android:text="Por nome de usuário"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchusername"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/_12ssp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/search_username_text"
                android:background="@drawable/border_none_textview"
                android:layout_marginEnd="24dp"
                android:hint="nome do usuário"
                android:visibility="visible" android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="84dp"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:text="Pesquisar local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchlocation"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/_12ssp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/search_location_text"
                android:background="@drawable/border_none_textview"
                android:layout_marginEnd="24dp"
                android:hint="Cidade"
                android:visibility="visible" android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="84dp"
                android:textSize="@dimen/_12ssp"
                android:inputType="none"
                android:focusable="false"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">

                <Button
                    android:text="Pronto"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="100dp"
                    android:background="@drawable/round_button"
                    android:layout_height="100dp" android:id="@+id/search_go_button" android:layout_weight="1"
                    android:textColor="@android:color/white" android:textSize="@dimen/_17ssp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/search_location_edittext"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    android:textAlignment="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

