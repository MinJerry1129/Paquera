<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/mylikes_imageview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            tools:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mylikes_name"
            app:layout_constraintStart_toEndOf="@+id/mylikes_imageview"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/commonGrey" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/mylikes_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/mylikes_imageview" android:layout_marginBottom="24dp"/>
    <Button
            android:text="Ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mylikes_view_button"
            style="@style/Widget.AppTheme.MyCustomButton" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
            android:textSize="@dimen/_13ssp" app:layout_constraintTop_toBottomOf="@+id/mylikes_name"
            app:layout_constraintStart_toEndOf="@+id/mylikes_imageview" android:layout_marginStart="12dp"
            android:textAlignment="viewStart"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:minWidth="0dp" android:paddingLeft="0dp" android:paddingRight="4dp" android:paddingTop="4dp"
            android:paddingBottom="4dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlike_button"
            style="@style/Widget.AppTheme.MyCustomButton" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
            android:textSize="@dimen/_13ssp" app:layout_constraintTop_toBottomOf="@+id/mylikes_name"
            android:textAlignment="viewStart"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:minWidth="0dp" android:paddingLeft="0dp" android:paddingRight="4dp" android:paddingTop="4dp"
            android:paddingBottom="4dp" app:layout_constraintStart_toEndOf="@+id/mylikes_view_button"
            android:layout_marginStart="20dp" android:layout_marginTop="8dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>