<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:barrierAllowsGoneWidgets="false"
    tools:context=".bottom_nav_pages.SearchActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/advanced_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:subtitleTextColor="#f5fbff"
        app:titleTextColor="#fff">


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/buttonOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pale_grey"
                android:gravity="center">

                <Button
                    android:id="@+id/search_allmembers_button"
                    style="@style/FoFSearchButtons"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="9.2dp"
                    android:layout_marginRight="8.6dp"
                    android:layout_marginBottom="5.8dp"
                    android:background="@drawable/rounded_button_orange_yellow"
                    android:text="Todos membros" />

                <Button
                    android:id="@+id/search_contactsonly_button"
                    style="@style/FoFSearchButtons"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="9.2dp"
                    android:layout_marginRight="8.6dp"
                    android:layout_marginBottom="5.8dp"
                    android:background="@drawable/rounded_button_greyish"
                    android:text="Apenas contatos" />

                <Button
                    android:id="@+id/searchmembersbtn"
                    style="@style/FoFSearchButtons"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="9.2dp"
                    android:layout_marginRight="8.6dp"
                    android:layout_marginBottom="5.8dp"
                    android:visibility="gone"
                    android:background="@drawable/rounded_button_cloudy_blue"
                    android:text="Eventos" />

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content"  android:layout_gravity="center">
            <TextView
                android:id="@+id/textView"
                style="@style/FriendsViewAboutMeCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_10ssp"
                android:editable="false"
                android:text="Digite a região que deseja encontrar sua paquera."
                android:textColor="@color/slate" />

            <EditText
                android:id="@+id/search_location_edittext"
                style="@style/FoFSearchLocationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75.5dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_left_textview"
                android:ems="10"
                android:focusable="false"
                android:hint="Search location"
                android:inputType="none"
                android:paddingLeft="15dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:text="Brasília, Brasil"
                android:textColorHint="@color/CommonBlue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/searchgobutton"
                android:layout_marginStart="74dp"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/_10ssp"
                style="@style/FoFSearchGoButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="left"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="Pronto" />
            <TextView
                android:id="@+id/textView12"
                style="@style/FriendsViewAboutMeCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="74dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:text="eu quero"
                android:textColor="@color/slate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_go_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/travel_accommodation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/travel_accommodation_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/fa_music_solid"
                        android:textColor="@color/orange_yellow"
                        android:textSize="18sp"
                        app:solid_icon="true"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/travel_accommodation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Sair com os amigos"
                        android:textColor="@color/orange_yellow"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/to_meet_people"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/to_meet_people_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="@string/fa_user_friends_solid"
                        android:textColor="@color/battleship_grey"
                        android:textSize="18sp"
                        app:solid_icon="true" />

                    <TextView
                        android:id="@+id/to_meet_people_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Encontrar pessoas"
                        android:textColor="@color/battleship_grey"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/to_date_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/fa_heart"
                        android:textColor="@color/orange_yellow"
                        android:textSize="18sp"
                        app:solid_icon="true" />

                    <TextView
                        android:id="@+id/to_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Paquera"
                        android:textColor="@color/orange_yellow"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/female"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp">

                        <info.androidhive.fontawesome.FontTextView
                            android:id="@+id/female_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/fa_square"
                            android:textColor="@color/battleship_grey"
                            android:textSize="18sp"
                            app:solid_icon="true" />

                        <TextView
                            android:id="@+id/female_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="Mulher"
                            android:textColor="@color/battleship_grey"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/male"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <info.androidhive.fontawesome.FontTextView
                            android:id="@+id/male_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/fa_square"
                            android:textColor="@color/battleship_grey"
                            android:textSize="18sp"
                            app:solid_icon="true" />

                        <TextView
                            android:id="@+id/male_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="Homem"
                            android:textColor="@color/battleship_grey"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/both"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp">

                        <info.androidhive.fontawesome.FontTextView
                            android:id="@+id/both_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/fa_square"
                            android:textColor="@color/orange_yellow"
                            android:textSize="18sp"
                            app:solid_icon="true" />

                        <TextView
                            android:id="@+id/both_text"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="Ambos"
                            android:textColor="@color/orange_yellow"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <info.androidhive.fontawesome.FontTextView
                            android:id="@+id/age_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/fa_square"
                            android:textColor="@color/battleship_grey"
                            android:textSize="18sp"
                            app:solid_icon="true" />

                        <TextView
                            android:id="@+id/age_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="Idade"
                            android:textColor="@color/battleship_grey"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:layout_weight="1"></LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>