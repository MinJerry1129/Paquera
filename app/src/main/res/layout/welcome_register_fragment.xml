<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerlogin.RegisterLoginActivityMain" app:barrierAllowsGoneWidgets="false">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/welcome_register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="#fff"
        app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">



    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_register_toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <TextView
                android:text="Bem-vindo ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13" android:textSize="@dimen/_18ssp"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
                android:textColor="@color/LightOrange"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="107dp" app:srcCompat="@drawable/my_friends_room_logo"
                android:id="@+id/imageView3" android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/_10ssp" android:layout_marginEnd="@dimen/_10ssp"/>
            <TextView
                android:text="Gostaríamos de saber mais sobre você para que possamos conectá-lo às pessoas certas. Você pode alterar essas opções posteriormente."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView17"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginTop="10dp"
                android:textSize="@dimen/_14ssp"/>
            <TextView
                android:text="O que você faz?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/whatdoyoudotitle" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="0dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="0dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/whatdoyoudo_welcome_register"
                android:background="@drawable/border_left_textview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="..."
                android:visibility="visible" android:layout_height="match_parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:paddingLeft="10dp"
                android:textColorHint="@color/CommonBlue"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/whatdoyoudotitle" android:textColor="@color/CommonBlue"
                android:textSize="@dimen/_14ssp" android:inputType="textMultiLine"/>
            <TextView
                android:text="Escreva algumas palavras sobre você"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/writefewwordstitle" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="0dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="0dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/username_edittext_register"/>
            <EditText
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/about_welcome_register"
                android:background="@drawable/border_left_textview"
                android:hint="..."
                app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="10dp"
                android:textColor="@color/CommonBlue"
                android:textColorHint="@color/CommonBlue"
                app:layout_constraintTop_toBottomOf="@+id/writefewwordstitle"
                android:visibility="visible"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_width="match_parent"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:text="O que você está procurando?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/welcome_what_are_you_looking_for_text_title" android:editable="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="@dimen/_14ssp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/password_repeat_edittext_register2"/>
            <CheckBox
                android:text="Sair com os amigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_register_travel_checkbox" android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/homesettings"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:textSize="@dimen/_12ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                android:checked="false"/>
            <CheckBox
                android:text="Fazer amizades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_register_meet_checkbox" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/terms_email_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:textSize="@dimen/_12ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                />
            <CheckBox
                android:text="Paquera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_register_date_checkbox" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/terms_email_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:textSize="@dimen/_12ssp"
                android:theme="@style/OrangeCheckBoxProfile"
                android:textColor="@color/CommonBlue"
                android:paddingLeft="5dp"
                />
            <TextView
                android:text="Você aceita sugestões de lugares para sair com seus amigos?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView7" android:editable="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:paddingBottom="6dp"
                android:textColor="@color/commonGrey"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/password_repeat_edittext_register2"
                android:textSize="@dimen/_14ssp"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/notificationLinear"


                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
                <CheckBox
                    android:text="sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome_register_yes_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:theme="@style/OrangeCheckBoxProfile"
                    android:textColor="@color/CommonBlue"
                    android:paddingLeft="5dp"
                    android:checked="false" android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_8ssp"/>
                <CheckBox
                    android:text="não"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome_register_no_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:theme="@style/OrangeCheckBoxProfile"
                    android:textColor="@color/CommonBlue"
                    android:paddingLeft="5dp"
                    android:checked="false"
                    android:layout_marginStart="@dimen/_50ssp"
                    android:layout_toEndOf="@+id/welcome_register_yes_checkbox"/>
                <CheckBox
                    android:text="talvez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome_register_maybe_checkbox"
                    app:layout_constraintStart_toStartOf="@+id/welcome_register_no_checkbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/_12ssp"
                    android:theme="@style/OrangeCheckBoxProfile"
                    android:textColor="@color/CommonBlue"
                    android:paddingLeft="5dp"
                    android:layout_toEndOf="@+id/welcome_register_no_checkbox"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/_50ssp" android:layout_marginRight="@dimen/_15ssp"
                    android:checked="true"/>
            </RelativeLayout>
            <Button
                android:text="Registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_button_register" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
                app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
                app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"
                style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
                android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
                android:textSize="@dimen/_13ssp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
                android:layout_marginBottom="100dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>