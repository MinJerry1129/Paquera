<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerlogin.RegisterLoginActivityMain" app:barrierAllowsGoneWidgets="false">
    <EditText
            android:layout_width="0dp"
            android:ems="10"
            android:id="@+id/username_edittext_register"
            android:background="@drawable/border_left_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:hint="what is your name?"
            android:visibility="visible" android:layout_height="28dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingLeft="10dp"
            android:textColorHint="@color/CommonBlue" android:inputType="textPersonName"
            android:layout_marginStart="24dp" android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_edittext_register"
            android:background="@drawable/border_left_textview"
            android:hint="enter your email..."
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/hometravel_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/hometravel_edittext_register"
            app:layout_constraintHorizontal_bias="0.0" android:visibility="visible" android:paddingLeft="10dp"
            android:textColor="@color/CommonBlue"
            android:textColorHint="@color/CommonBlue"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/age_edittext_register"
            android:background="@drawable/border_left_textview"
            android:hint="how old are you?"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:paddingLeft="10dp"
            android:textColor="@color/CommonBlue"
            android:textColorHint="@color/CommonBlue"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/hometravel_edittext_register"
            android:background="@drawable/border_left_textview"
            android:hint="My closest big city, e.g London"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/age_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/age_edittext_register" android:paddingLeft="10dp"
            android:textColor="@color/CommonBlue"
            android:textColorHint="@color/CommonBlue" app:layout_constraintHorizontal_bias="0.0"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_edittext_register"
            android:background="@drawable/border_left_textview"
            android:hint="enter your password..."
            app:layout_constraintStart_toStartOf="@+id/email_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/email_edittext_register" android:paddingLeft="10dp"
            android:textColor="@color/CommonBlue"
            android:textColorHint="@color/CommonBlue" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_repeat_edittext_register2"
            android:background="@drawable/border_left_textview"
            android:hint="repeat password..."
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/email_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/email_edittext_register" android:paddingLeft="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/CommonBlue"
            android:textColorHint="@color/CommonBlue"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/selectphoto_button_register"
            app:layout_constraintStart_toStartOf="@+id/password_edittext_register"
            app:layout_constraintEnd_toEndOf="@+id/password_edittext_register"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Upload photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectphoto_button_register"
            tools:layout_editor_absoluteX="140dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/username_edittext_register"/>
    <TextView
            android:text="Home or Travel location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/age_edittext_register"/>
    <TextView
            android:text="Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hometravel_edittext_register"/>
    <TextView
            android:text="Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext_register"/>
    <TextView
            android:text="Repeat password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext_register"/>
    <TextView
            android:text="Are you:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password_repeat_edittext_register2"/>
    <TextView
            android:text="Add your profile picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="18dp"
            android:paddingBottom="6dp"
            android:textColor="@color/commonGrey"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
</androidx.constraintlayout.widget.ConstraintLayout>