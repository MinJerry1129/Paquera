<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".messages.LatestMessagesActivity" android:id="@+id/activitymylikes">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/myprofile_homepics_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

        <TextView
                android:id="@+id/myprofile_homepics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotos do meu lugar"
                android:textColor="@color/LightOrange"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:textSize="@dimen/_15ssp"
        />



    </androidx.appcompat.widget.Toolbar>

    <Button
            android:id="@+id/profile_add_new_homephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ adicionar nova foto"
            android:textColor="@color/CommonBlue"
            android:layout_gravity="right"

            android:paddingRight="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_14ssp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/myprofile_homepics_toolbar" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerview_profile_homepics"
            app:layout_constraintTop_toBottomOf="@+id/profile_add_new_homephoto"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>