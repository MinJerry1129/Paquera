<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_latest_message"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:id="@+id/latest_messageLinear"
            app:layout_constraintStart_toEndOf="@+id/imageview_latest_message"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/message_textview_latest_message"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp">
    <TextView
            tools:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_latest_message"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" app:layout_constraintTop_toTopOf="parent" android:textSize="@dimen/_14ssp"
            android:textColor="@color/commonGrey" android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                android:layout_height="wrap_content" android:id="@+id/time_textview_latest_message" android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp" android:layout_alignTop="@+id/username_textview_latest_message"
                android:layout_marginTop="0dp" android:layout_marginBottom="5dp"
                android:layout_alignBottom="@+id/username_textview_latest_message"
                android:textSize="@dimen/_11ssp"/>
    </RelativeLayout>
    <TextView
            tools:text="Latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/message_textview_latest_message"
            app:layout_constraintStart_toEndOf="@+id/imageview_latest_message"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latest_messageLinear"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="@dimen/_12ssp"
            android:textColor="@color/commonGrey"
            android:ellipsize="end"
            android:maxLines="1"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/counter_textview_latest_message"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/message_textview_latest_message"
            android:background="@drawable/rounded_corner_notification"
            app:layout_constraintTop_toTopOf="@+id/message_textview_latest_message" android:paddingLeft="5dp"
            android:paddingRight="5dp" android:textColor="@android:color/white"
            android:textSize="@dimen/_11ssp" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>