<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" android:editable="false" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" android:textSize="@dimen/_14ssp"
        android:paddingBottom="6dp"
        android:textColor="@color/commonGrey"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"/>
    <EditText


        android:hint="Digite seu e-mail..."
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_edittext_login"
        android:background="@drawable/border_left_textview"
        android:paddingLeft="10dp"
        android:textColor="@color/CommonBlue"
        android:textColorHint="@color/CommonBlue"
        android:visibility="visible"
        android:textSize="@dimen/_14ssp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/textView2" android:textAllCaps="true"
        android:textColorLink="@color/LightOrange"/>
    <TextView
        android:text="Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" android:editable="false" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" android:textSize="@dimen/_14ssp"
        android:paddingBottom="6dp"
        android:textColor="@color/commonGrey"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/email_edittext_login"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_edittext_login"
        android:hint="Coloque sua senha.."
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        android:background="@drawable/border_left_textview"
        android:paddingLeft="10dp"
        android:textColor="@color/CommonBlue"
        android:textColorHint="@color/CommonBlue"
        android:textSize="@dimen/_14ssp"

        app:layout_constraintHorizontal_bias="0.0"
        android:textColorLink="@color/LightOrange"/>
    <Button
        android:text="Entrar"
        android:id="@+id/login_button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"
        style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
        android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
        android:textSize="@dimen/_13ssp"/>
    <Button
        android:text="Esqueceu sua senha?"
        android:id="@+id/login_button_forgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_button_login"
        app:layout_constraintStart_toStartOf="@+id/login_button_login"
        app:layout_constraintEnd_toEndOf="@+id/login_button_login"
        style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
        android:textColorHint="@color/CommonBlue" android:textColor="@color/CommonBlue"
        android:textSize="@dimen/_11ssp" android:textAlignment="textStart" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>