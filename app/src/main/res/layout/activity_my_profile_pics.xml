<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".messages.LatestMessagesActivity" android:id="@+id/activitymylikes">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/myprofile_pics_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

        <TextView
                android:id="@+id/myprofile_pics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minhas fotos de perfil"
                android:textColor="@color/LightOrange"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:textSize="@dimen/_15ssp"
        />



    </androidx.appcompat.widget.Toolbar>

    <Button
            android:id="@+id/profile_add_new_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ adicionar nova foto"
            android:textColor="@color/CommonBlue"
            android:layout_gravity="right"

            android:paddingRight="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_14ssp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/myprofile_pics_toolbar" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="profile pics only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14"
            android:textSize="@dimen/_14ssp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_add_new_photo"
        android:visibility="gone"/>
    <TextView
            android:text="add home pics \nbelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginEnd="53dp"
            app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
    <TextView
            android:text="Add pics of your place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView16"
            android:textSize="@dimen/_14ssp" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
        android:visibility="gone"/>
    <Button
            android:id="@+id/profile_pics_place_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here"
            android:textColor="@color/CommonBlue"
            android:layout_gravity="right"
            style="@style/Widget.AppTheme.MyCustomButton"
            android:paddingRight="16dp" android:textAllCaps="false"
            android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_14ssp"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView16" android:layout_marginStart="8dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerview_profile_pics"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView16">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>