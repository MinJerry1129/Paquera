<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".messages.LatestMessagesActivity" android:id="@+id/fragmentMessagesContainer">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_latest_messages_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bate-papo"
                android:textColor="@color/LightOrange"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:textSize="@dimen/_15ssp"
        />
        <Button
                android:id="@+id/toolbar_contacts"
                android:layout_height="50dp"
                android:text="Contatos"
                android:textColor="@color/CommonBlue"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:paddingLeft="16dp" tools:layout_editor_absoluteY="14dp"
                style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
                android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_15ssp"
                android:backgroundTint="@android:color/white"
        />
        <Button
                android:id="@+id/toolbar_signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:textColor="@color/CommonBlue"
                android:layout_gravity="right"

                android:paddingRight="16dp" tools:layout_editor_absoluteY="14dp" tools:layout_editor_absoluteX="329dp"
                style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="false"
                android:textColorHint="@color/CommonBlue" android:textSize="@dimen/_15ssp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerview_latest_messages"
            app:layout_constraintTop_toBottomOf="@+id/profile_latest_messages_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>